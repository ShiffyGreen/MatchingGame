            <Button Grid.Row="4" Grid.Column="2" Margin="5"/>
            <Button Grid.Row="4" Grid.Column="3" Margin="5"/>
            <Button Grid.Row="4" Grid.Column="4" Margin="5"/>
            <Button Grid.Row="4" Grid.Column="5" Margin="5"/>
            <Button Grid.Row="4" Grid.Column="6" Margin="5"/>
            <Button Grid.Row="5" Grid.Column="0" Margin="5"/>
            <Button Grid.Row="5" Grid.Column="1" Margin="5"/>
